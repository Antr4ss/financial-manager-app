<!-- Sidebar -->
<div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
    <div class="position-sticky pt-3">
        <!-- User Info -->
        <div class="text-center mb-4">
            <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px;">
                <i class="bi bi-person-circle text-white fs-2"></i>
            </div>
            <h6 class="text-dark mb-0"><%= user.name %></h6>
            <small class="text-muted"><%= user.email %></small>
        </div>
        
        <!-- Navigation -->
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>" href="/dashboard">
                    <i class="bi bi-speedometer2 me-2"></i>
                    Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link <%= currentPage === 'incomes' ? 'active' : '' %>" href="/incomes">
                    <i class="bi bi-arrow-up-circle me-2"></i>
                    Ingresos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link <%= currentPage === 'expenses' ? 'active' : '' %>" href="/expenses">
                    <i class="bi bi-arrow-down-circle me-2"></i>
                    Gastos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link <%= currentPage === 'reports' ? 'active' : '' %>" href="/reports">
                    <i class="bi bi-bar-chart me-2"></i>
                    Reportes
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link <%= currentPage === 'settings' ? 'active' : '' %>" href="/settings">
                    <i class="bi bi-gear me-2"></i>
                    Configuración
                </a>
            </li>
        </ul>
        
        <!-- Quick Actions -->
        <div class="mt-4">
            <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                <span>Acciones Rápidas</span>
            </h6>
            <ul class="nav flex-column mb-2">
                <li class="nav-item">
                    <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#incomeModal">
                        <i class="bi bi-plus-circle me-2"></i>
                        Nuevo Ingreso
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#expenseModal">
                        <i class="bi bi-dash-circle me-2"></i>
                        Nuevo Gasto
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/reports">
                        <i class="bi bi-file-earmark-text me-2"></i>
                        Generar Reporte
                    </a>
                </li>
            </ul>
        </div>
        
        <!-- Stats Summary -->
        <div class="mt-4">
            <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                <span>Resumen</span>
            </h6>
            <div class="px-3">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <small class="text-muted">Balance Total</small>
                    <small class="text-success fw-bold" id="sidebarBalance">$0.00</small>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <small class="text-muted">Este Mes</small>
                    <small class="text-info fw-bold" id="sidebarMonthly">$0.00</small>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">Transacciones</small>
                    <small class="text-warning fw-bold" id="sidebarTransactions">0</small>
                </div>
            </div>
        </div>
        
        <!-- Logout -->
        <div class="mt-4 pt-3 border-top">
            <a class="nav-link text-danger" href="/logout">
                <i class="bi bi-box-arrow-right me-2"></i>
                Cerrar Sesión
            </a>
        </div>
    </div>
</div>
