<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <%- include('partials/navbar') %>

    <!-- Main Content -->
    <div class="container-fluid mt-4">
        <!-- Expenses Section -->
        <div id="expenses" class="section">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2>
                            <i class="bi bi-arrow-down-circle me-2"></i>Gestión de Gastos
                        </h2>
                        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#expenseModal">
                            <i class="bi bi-plus-circle me-2"></i>Nuevo Gasto
                        </button>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-funnel me-2"></i>Filtros
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-2">
                            <label class="form-label">Categoría</label>
                            <select class="form-select" id="expenseCategoryFilter">
                                <option value="">Todas las categorías</option>
                                <option value="alimentacion">Alimentación</option>
                                <option value="transporte">Transporte</option>
                                <option value="vivienda">Vivienda</option>
                                <option value="servicios">Servicios</option>
                                <option value="salud">Salud</option>
                                <option value="educacion">Educación</option>
                                <option value="entretenimiento">Entretenimiento</option>
                                <option value="ropa">Ropa</option>
                                <option value="tecnologia">Tecnología</option>
                                <option value="deudas">Deudas</option>
                                <option value="ahorro">Ahorro</option>
                                <option value="inversion">Inversión</option>
                                <option value="impuestos">Impuestos</option>
                                <option value="seguros">Seguros</option>
                                <option value="mantenimiento">Mantenimiento</option>
                                <option value="otros">Otros</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Fecha Inicio</label>
                            <input type="date" class="form-control" id="expenseStartDateFilter">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Fecha Fin</label>
                            <input type="date" class="form-control" id="expenseEndDateFilter">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Tipo</label>
                            <select class="form-select" id="expenseEssentialFilter">
                                <option value="">Todos</option>
                                <option value="true">Esenciales</option>
                                <option value="false">No Esenciales</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Ordenar por</label>
                            <select class="form-select" id="expenseSortBy">
                                <option value="date">Fecha</option>
                                <option value="amount">Monto</option>
                                <option value="description">Descripción</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            <label class="form-label">Orden</label>
                            <select class="form-select" id="expenseSortOrder">
                                <option value="desc">Desc</option>
                                <option value="asc">Asc</option>
                            </select>
                        </div>
                        <div class="col-md-1 d-flex align-items-end">
                            <button class="btn btn-primary w-100" onclick="filterExpenses()">
                                <i class="bi bi-funnel"></i>
                            </button>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <button class="btn btn-outline-secondary btn-sm" onclick="clearExpenseFilters()">
                                <i class="bi bi-x-circle me-1"></i>Limpiar Filtros
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Expenses Table -->
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Descripción</th>
                                    <th>Monto</th>
                                    <th>Categoría</th>
                                    <th>Fecha</th>
                                    <th>Método</th>
                                    <th>Esencial</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="expensesTableBody">
                                <% if (expenses && expenses.length > 0) { %>
                                    <% expenses.forEach(expense => { %>
                                        <tr>
                                            <td><%= expense.description %></td>
                                            <td class="text-danger fw-bold">
                                                <%= new Intl.NumberFormat('es-ES', {
                                                    style: 'currency',
                                                    currency: userPreferences?.currency || 'USD'
                                                }).format(expense.amount) %>
                                            </td>
                                            <td><span class="badge bg-primary"><%= expense.category %></span></td>
                                            <td>
                                                <%= new Date(expense.date).toLocaleDateString('es-ES', {
                                                    year: 'numeric',
                                                    month: 'short',
                                                    day: 'numeric'
                                                }) %>
                                            </td>
                                            <td><%= expense.paymentMethod %></td>
                                            <td>
                                                <% if (expense.isEssential) { %>
                                                    <span class="badge bg-warning">Esencial</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">No esencial</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary me-1" onclick="editExpense('<%= expense._id %>')">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger" onclick="deleteExpense('<%= expense._id %>')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">No hay gastos registrados</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modals -->
    <%- include('partials/modals') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/app.js"></script>
</body>
</html>
