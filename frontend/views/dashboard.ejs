<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <%- include('partials/navbar') %>

    <!-- Alerts -->
    <%- include('partials/alerts') %>

    <!-- Main Content -->
    <div class="container-fluid mt-4">
        <!-- Breadcrumbs -->
        <%- include('partials/breadcrumbs') %>
        
        <!-- Page Header -->
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="mb-0">
                        <i class="bi bi-speedometer2 me-2"></i>Dashboard
                    </h2>
                    <div>
                        <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#incomeModal">
                            <i class="bi bi-plus-circle me-1"></i>Nuevo Ingreso
                        </button>
                        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#expenseModal">
                            <i class="bi bi-dash-circle me-1"></i>Nuevo Gasto
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Quick Stats -->
        <%- include('partials/quick-stats') %>
        
        <!-- Quick Actions -->
        <%- include('partials/quick-actions') %>
        
        <!-- Recent Transactions -->
        <%- include('partials/recent-transactions') %>
    </div>

    <!-- Modals -->
    <%- include('partials/modals') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/app.js"></script>
</body>
</html>